TITLE P16
.MODEL SMALL
.CODE
ORG 100H

BEGIN: JMP SHORT MAIN
;CANTIDAD DE CASILLAS PARA CADA ESPACIO DEL MES
NINE   DB 10               ;CAMPO SELECCIONADO DE LA TABLA
MONIN  DB '12'
ALFMON DB 10 DUP (30H),'$'
MONTAB DB 'ENERO     ','FEBRERO   ','MARZO     ',
DB 'ABRIL     ','MAYO      ','JUNIO     ',
DB 'JULIO     ','AGOSTO    ','SEPTIEMBRE',
DB 'OCTUBRE   ','NOVIEMBRE ','DICIEMBRE '   ;MESES DE LA TABLA

MAIN PROC NEAR      ;INICIO DEL MAIN
CALL C10CONV    ;CONVIERTE A BINARIO
CALL D10LOC     ;LOCALIZA EL MES
CALL F10DISP    ;DESPLIEGA EL MES EN FORMA ALFABETICA
MOV AX,4C00H    ;SALE AL DOS
INT 21H         ;INTERRUPCION 21H
MAIN ENDP

C10CONV PROC        ;FUNC DE CONVERTIR A BINARIO
MOV AH,MONIN    ;CONFIGURA EL MES
MOV AL,MONIN+1
XOR AX,3030H    ;LIMPIA LOS 3 ASCII
CMP AH,00       ;ES DEL MES 1 AL 9?
JZ C20          ;SI SI, ENTONCES CONTINUAR
SUB AH,AH       ;SI NO, ENTONCES LIMPIA EL AH
ADD AL,10       ;CORREGIR PARA BINARIO
C20:RET             ;RETORNA
C10CONV ENDP        ;FIN FUNC

D10LOC PROC         ;FUNC LOCALIZAR EL MES
LEA SI,MONTAB   ;
DEC AL          ;CORRIGE LA TABLA
MUL NINE        ;MULTIPLICA AL POR 10
ADD SI,AX       ;
MOV CX,0000H    ;INICIALIZA EL MOV EN 10 CARACTERES
MOV CL,NINE     ;
CLD             ;
LEA DI,ALFMON   ;
REP MOVSB       ;MUEVE 10 CARACTERES
RET             ;RETORNA
D10LOC ENDP         ;FIN FUNC

F10DISP PROC        ;DESPLIEGA EL MES
MOV AH,09H      ;PETICION DE DESPLIEGUE
LEA DX,ALFMON   ;
INT 21H         ;INTERRUPCION 21H
RET             ;RETORNA
F10DISP ENDP        ;FIN FUNC

END BEGIN           ;FIN PROGRAMA

